@model IEnumerable<Product>
<div class="row bg-title">
    <div class="col-md-6">
        <h4 class="page-title" style="cursor: s-resize;">
            <span>Product Management</span>
        </h4>
    </div>
    <div class="col-md-6">
        <ul class="nav nav-pills pull-right">
            <li class="nav-item" role="presentation">
                <a asp-action="Create" asp-controller="Product" class="nav-link bg-primary">Create New</a>
            </li>
        </ul>
    </div>
</div>
<div class="col-lg-12">
    <div class="col-md-5">
        <div class="form-group">
            <label class="control-label col-md-4">Search By</label>
            <div class="col-md-8">
                <input type="text"  class="form-control input-sm" v-model="search.UserName" v-on:keyup.enter="onSearchClick" />
            </div>
        </div>
    </div>
    <div class="col-md-7">
        <div class="form-group">
            <button type="button" class="btn btn-primary btn-sm" v-on:click="onSearchClick()">
                Search
            </button>
            <button type="button" class="btn btn-danger btn-sm" v-on:click="onSearchClick()">
                Reset
            </button>
        </div>
    </div>
</div>